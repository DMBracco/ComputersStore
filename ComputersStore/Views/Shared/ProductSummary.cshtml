@model Product

<div class="card card-outline-primary m-1 p-1 mb-4">
     <a class="nav-link" asp-area="" asp-controller="Catalog" asp-action="Details" asp-route-id="@Model.ProductID" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <div class="bg-faded p-1">
            <h4>
                @Model.Name
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@Model.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <span class="card-text p-1">@Model.Description</span>
    </a>
</div>
